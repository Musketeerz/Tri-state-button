<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.praveen.customview.MainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="212dp"
        android:id="@+id/relativeLayout">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="24dp"
            android:layout_alignTop="@+id/button3"
            android:layout_centerHorizontal="true"
            android:background="@drawable/relbak">

        </LinearLayout>

        <Button

            android:id="@+id/button"
            android:layout_width="45dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/button3"
            android:background="@drawable/mbut"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="45dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/mbut2"

            android:visibility="invisible" />

        <Button
            android:id="@+id/button4"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button3"
            android:layout_toEndOf="@+id/button3"
            android:background="@drawable/mbut3"

            />

        <Button
            android:id="@+id/button2"
            android:layout_width="45dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button"
            android:background="@drawable/but4"
            android:textColor="#fff"
            android:text=""
            />

    </RelativeLayout>


</RelativeLayout>
